/* pages/home/home.wxss */
.home{
  background: #dfdfdf;
}
.swiper-image{
  width: 100%;
  height: 100%;
}
.home-tou{
  /* text-align: center; */
  height: 70rpx;
  background: white;
  line-height: 70rpx;
  display:flex;
}
.home-tou view{
  flex: 1;
}
.home-tou image,.home-tou icon{
  width:45rpx;
  height:45rpx;
  padding-top: 10rpx;
}
.home-tou text{
  font-size: 32rpx;
  margin: 20rpx 30rpx 0rpx 20rpx;
}
.home-xinxi{
  margin:20rpx 0rpx 20rpx 0rpx;
  background: white;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.box image{
  height: 200rpx;
  width: 145rpx;
}
.movie-item{
  width: 35%;
  height: 350rpx;
/*   box-sizing: border-box;
  border:2rpx solid black' */
  display: inline-block;
  text-align: center;
  margin: 15rpx;
  border-radius: 8rpx;
  background: white;
}
.movie-item image{
  width: 250rpx;
  height: 250rpx;
}
.home-tuijian image{
  width: 200rpx;
  height: 200rpx;
}
.item-title{
  font-size: 30rpx;
}
.item-pric{
  font-size: 35rpx;
  color: red;
  font-weight: 20rpx;
}
.home-tuijian{
  text-align: center;
  background:white;
  width: 230rpx;
  height: 310rpx;
  border-radius: 8rpx;
  margin: 10rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.xiahuaxian{
  border-bottom: 6rpx solid red;
}
.home-bottom{
  background: white;
  height: 300rpx;
  line-height: 150rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.home-bottom text{
  margin: 20rpx;
  font-size: 30rpx;
  border-bottom:4rpx solid black;
}